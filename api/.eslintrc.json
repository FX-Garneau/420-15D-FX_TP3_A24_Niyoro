{
	"env": {
		"node": true,
		"mongo": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"ignorePatterns": ["*.min.*", "**/3rdparty/*.*"],
	"rules": {
		// "indent": ["error", "tab"],
		// "linebreak-style": ["error", "unix"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"]
	}
}
